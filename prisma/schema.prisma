// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
  engineType = "binary"
  transpile  = true
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int       @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String    @unique
  phone          String
  password       String
  drivingLicense String
  dateOfBirth    DateTime?
  address        String?
  city           String?
  country        String?
  isVerified     Boolean   @default(false)
  role           UserRole  @default(CUSTOMER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // Relations
  bookings    Booking[]
  userProfile UserProfile?
  payments    Payment[]

 // ADD the correct relation to ContactMessage
  messages       ContactMessage[]

  
  @@map("users")
}

model UserProfile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  avatar      String?
  preferences Json?
  notifications Json?  
  privacy     Json?    
  security    Json?    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id])
  
  @@map("user_profiles")
}

model Car {
  id          Int      @id @default(autoincrement())
  make        String
  model       String
  year        String
  price       String
  image       String
  fuelType    FuelType
  seats       Int
  transmission Transmission
  drive       DriveType
  category    CarCategory
  rating      Float
  reviews     Int
  power       String
  isAvailable Boolean  @default(true)
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  bookings Booking[]
  payments Payment[]
  
  @@map("cars")
}

model Booking {
  id           Int        @id @default(autoincrement())
  userId       Int
  carId        Int
  startDate    DateTime
  endDate      DateTime
  totalPrice   Float
  status       BookingStatus @default(PENDING)
  pickupLocation  String
  dropoffLocation String
  specialRequests String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  // Relations
  user    User    @relation(fields: [userId], references: [id])
  car     Car     @relation(fields: [carId], references: [id])
  payment Payment?
  
  @@map("bookings")
}

model Payment {
  id               Int           @id @default(autoincrement())
  checkoutRequestID String        @unique
  transactionId    String        @unique
  carId            Int
  userId           Int
  bookingId        Int?           @unique
  phoneNumber      String
  amount           Float
  status           PaymentStatus @default(PENDING)
  mpesaReceiptNumber String?
  accountReference String
  transactionDesc  String
  failureReason    String?
  metadata         Json?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  // Relations
  car    Car    @relation(fields: [carId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
  booking Booking? @relation(fields: [bookingId], references: [id])
  
  @@map("payments")
}

// Enums
enum UserRole {
  CUSTOMER
  AGENT
  ADMIN
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum DriveType {
  FWD
  RWD
  AWD
  FOUR_WD
}

enum CarCategory {
  ECONOMY
  COMPACT
  MIDSIZE
  STANDARD
  FULLSIZE
  LUXURY
  SUV
  SPORTS
  MINIVAN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model ContactMessage {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String
  subject     String
  message     String
  rentalType  String
  createdAt   DateTime @default(now())

  // Optional user link (message can be from logged-in OR guest)
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
}
